/* Settings for the about, resume & papers pages */
/* background image */
.bkgrd {
  background: url(<%= asset_path "riverbank.JPG" %>) no-repeat; /*rivercliff.jpg*/
  background-size: cover;
}
/* page container */
.page-container {
  background: rgba(255,255,255,0.8);
  margin: 60px;
  padding: 5px;
  border: 2px solid #95b9d8;
  border-radius: 15px;
  -moz-border-radius: 15px;
}
/* text container */
.text-container {
  margin: 30px;
}
/* Font styling */
p {
  color: black;
  font-family: verdana;
  text-indent: 0px; 
  }
/* Set font color for link text */
#bluefont {
  color: blue;
}



